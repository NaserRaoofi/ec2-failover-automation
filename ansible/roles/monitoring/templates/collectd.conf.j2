# Collectd configuration for {{ project_name }}
# Generated by Ansible

Hostname "{{ ansible_hostname }}"
FQDNLookup false

# Plugins
LoadPlugin syslog
LoadPlugin cpu
LoadPlugin interface
LoadPlugin load
LoadPlugin memory
LoadPlugin disk
LoadPlugin df
LoadPlugin processes
LoadPlugin users

# Plugin configurations
<Plugin cpu>
  ReportByCpu true
  ReportByState true
  ValuesPercentage true
</Plugin>

<Plugin df>
  MountPoint "/"
  FSType "ext4"
  FSType "xfs"
  IgnoreSelected false
  ReportReserved true
  ReportInodes true
</Plugin>

<Plugin disk>
  Disk "/^[hs]d[a-z]/"
  IgnoreSelected false
</Plugin>

<Plugin interface>
  Interface "eth0"
  IgnoreSelected false
</Plugin>

<Plugin memory>
  ValuesAbsolute true
  ValuesPercentage true
</Plugin>

<Plugin syslog>
  LogLevel info
</Plugin>

# Logging
<Plugin logfile>
  LogLevel "info"
  File "/var/log/collectd.log"
  Timestamp true
</Plugin>
